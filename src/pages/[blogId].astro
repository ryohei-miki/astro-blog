---
import Layout from "@layouts/Layout.astro";
import { getBlogs, getBlogDetail } from "@libs/microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<Layout title={blog.title}>
  <main>
    <div class="mb-20">
      <h1 class="mt-6 mb-2 text-center text-3xl font-bold">{blog.title}</h1>
      <p class="text-slate-400 text-center text-sm">{blog.publishedAt}</p>
    </div>
    <div class="post" set:html={blog.content} />
  </main>
</Layout>

<style is:global>
  .post h1{
    @apply mt-10 mb-4 pb-2 text-3xl font-bold border-b border-solid border-slate-500
  }
  .post h2{
    @apply mt-9 mb-3 pb-2 text-2xl font-bold border-b border-solid border-slate-500
  }
  .post h3{
    @apply mt-8 mb-2 pb-2 text-xl font-bold
  }
  .post h4{
    @apply mt-7 mb-1 pb-2 text-lg font-bold
  }
</style>
